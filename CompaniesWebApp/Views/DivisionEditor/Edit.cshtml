@using CompaniesWebApp.Models.DatabaseModels;
@model Division
@{
    ViewData["Title"] = "Редактирование отдела";
}

@using (Html.BeginForm("Edit", "DivisionEditor", FormMethod.Post))
{
    <input type="hidden" value="@Model.Id" name="Id" />
    @Html.LabelFor(m => m.Name, "Введите название отдела:")<br />
    @Html.TextBoxFor(m => m.Name)<br />
    @Html.DropDownListFor(m => m.DepartmentId, ViewBag.Departments as SelectList)<br />
    <input type="submit" value="Сохранить" />
}
